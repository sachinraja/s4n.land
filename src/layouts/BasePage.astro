---
import BaseHead, { Props as BaseHeadProps } from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import { SITE_DESCRIPTION, SITE_TITLE } from '../config'

export interface Props {
  header?: boolean
  baseHead?: BaseHeadProps
}

const {
  header = true,
  baseHead = {
    title: SITE_TITLE,
    description: SITE_DESCRIPTION,
  },
} = Astro.props
---

<!DOCTYPE html>
<html lang="en-us">
  <head>
    <BaseHead {...baseHead} />
  </head>
  <body class="bg-gray-900 text-gray-400">
    <div class="w-4/5 sm:w-3/4 lg:w-1/2 m-auto mb-20">
      {header && <Header class="mt-8" />}
      <main class="mt-2">
        <slot />
      </main>
    </div>
  </body>
</html>
